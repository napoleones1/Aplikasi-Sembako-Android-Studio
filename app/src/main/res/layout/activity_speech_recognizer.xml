<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".SpeechRecognizer">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konversi Suara Ke Teks"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/textSpeech"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/titleText"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:text="Silakan bicara..."
        android:textColor="#444"
        android:textSize="18sp"
        android:background="@drawable/bg_output_box"
        android:gravity="top|start"/>

    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSpeech"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_rounded"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="ðŸŽ¤ Bicara"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />

    </RelativeLayout>
</ScrollView>